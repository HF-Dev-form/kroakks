extends ../layout.pug

block content
    div(class="d-flex flex-row mx-auto my-2 ")
        div(class="flex-fill shadow-sm")
            form(class="card mx-auto border-light border" method="post" action= message._id ? "/messages/update/" + message._id : "/messages")
                div(class="class-header ps-1 rounded p-2 m-2 col-3 text-center bg-primary text-white fsw-bolder") 
                    if message._id 
                        h5(class="card-title pt-1") Modifier votre croakk
                    else 
                        h5(class="card-title pt-1") Ecrire un croakk    
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content" placeholder="Quoi de neuf?")= message.content
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger fst-italic list-group-item m-0 p-0")= error     

                    div(class="w-100")
                        input(type="submit" class="btn btn-primary my-2 ms-auto d-block rounded" value= message._id ? "Modifier" : "Envoyer")
