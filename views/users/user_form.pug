extends ../layout.pug

block content
    div(class="d-flex flex-row mx-auto my-2 justify-content-center")
            form(class="card my-3 mx-auto border-light border" method="post" action="/users/signup")
                div(class="class-header ps-1 rounded p-2 m-2 text-center bg-primary text-white fsw-bolder") 
                        h3(class="card-title pt-1") Inscription
                div(class="card-body")
                    div(class="form-group")
                        label Nom d'utilisateur
                        input(type="text" class="form-control" name="username")
                    div(class="form-group")
                        label Email
                        input(type="text" class="form-control" name="email")
                    div(class="form-group")
                        label Mot de passe
                        input(type="password" class="form-control" name="password")         
                    if errors
                        ul(class="my-2 text-center")
                            each error in errors
                                li(class="text-center text-danger fst-italic list-group-item m-0 p-0")= error     

                    div(class="w-100")
                        input(type="submit" class="btn btn-sm btn-primary my-2 ms-auto d-block rounded" value="Envoyer")
